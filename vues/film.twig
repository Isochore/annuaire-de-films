{% for detail in details %}



    <img src="/annuaire-de-films/media/{{detail.id}}.jpg" height="300px" width="202px">
    {{ detail.titre }}
    {{ detail.annee_de_sortie }}
    <a href={{"/annuaire-de-films/realisateurs/detail/"~detail.realid}}>{{ detail.realisateur }}</a>
    {% set acteur = detail.acteur|split(',') %}
